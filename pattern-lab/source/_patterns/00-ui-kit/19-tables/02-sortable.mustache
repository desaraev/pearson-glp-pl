{{#tableSort}}
<div class="responsive-table">
    <table class="sortable" aria-label="{{tableName}}">
        <thead>
            <tr>
                {{#th}}
                <th scope="col" class="sort" aria-sort="none" tabindex="0">{{label}} {{#icons}}
                    <span class="{{direction}}">{{>ui-kit-single-icon}}</span>
                    {{/icons}}
                </th>
                {{/th}}
            </tr>
        </thead>
        <tbody>
            {{#tr}}
            <tr>
                {{#td}}
                <td>{{label}}</td>
                {{/td}}
            </tr>
            {{/tr}}
        </tbody>
    </table>
</div>
{{/tableSort}}

