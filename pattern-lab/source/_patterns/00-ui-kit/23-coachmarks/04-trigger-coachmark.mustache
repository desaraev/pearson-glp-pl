{{#egTopCoachmark}}
<form class="pe-form">
	<h1 class="pe-form--name">{{name}}{{> ui-kit-coachmark }}</h1>
	<div>
		{{#inputBlock}}
		<div class="pe-form--input">
			{{> ui-kit-placeholder }}
		</div>
		{{/inputBlock}}
	</div>
</form>
{{/egTopCoachmark}}

{{#egBtmCoachmark}}
<form class="pe-form">
	<h1 class="pe-form--name">{{name}}</h1>
	<div>
		<div class="pe-form--input">
			{{> ui-kit-placeholder }}
		</div>
		<div class="pe-form--input">
			<div class="basic-input">
				<label class="pe-textLabelInput__label" for="{{id}}">{{label}}{{> ui-kit-coachmark }}</label>
				<input type="text" class="pe-textInput--basic" id="{{id}}" placeholder="{{placeholder}}">
			</div>
		</div>
	</div>
</form>
{{/egBtmCoachmark}}