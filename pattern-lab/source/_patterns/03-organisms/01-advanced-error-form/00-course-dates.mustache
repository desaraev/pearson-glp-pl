{{#courseDates}}
<div class="course-dates">
    <div class="pe-form--group" id="courseDates">
        <div class="label-spacing">
            <div class="row">
                <div class="col-sm-3 hidden-xs">

                </div>
                <div class="col-sm-6 start-end-times">
                    <div class="col-xs-5 hidden-xs no-padding">

                    </div>
                    <div class="col-xs-5 col-xs-offset-2 hidden-xs end-time-label">

                    </div>
                </div>
            </div>
        </div>
        <div class="schedule-row" id="schedule-row-{{num}}">
            <div class="pe-form--group">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 ">
                        <div class="basic-select">
                            {{#daySelect}}
                            <label id="label-head-days" for="{{id}}" class="pe-textLabelInput__label "><span>Days</span>
                            </label>
                            <div class="pe-select-container">

                                <select class="pe-selectInput--basic" id="{{id}}">
                                    {{#optionList}}
                                    <option value="{{value}}">{{label}}</option>
                                    {{/optionList}}
                                </select>
                                {{> ui-kit-single-icon }}
                            </div>
                            {{/daySelect}}
                        </div>
                    </div>
                    <div class="start-end-times col-xs-12 col-sm-6">
                        <div class="col-xs-5 no-padding">
                            {{#startTime}}
                            <div class="timepicker-container start">
                                <div class="timepicker">
                                    <label for="timeSelectorStart-0" class="pe-textLabelInput__label ">
                                        <div><span>Start time</span>
                                            &nbsp;(
                                            <span>hh:mm AM/PM</span>)
                                        </div>
                                    </label>
                                    {{> ui-kit-input-icon }}
                                </div>
                                {{> ui-kit-menu }}
                            </div>
                            {{/startTime}}
                        </div>
                        <div class="col-xs-2 to-time"><span>to</span>
                        </div>
                        <div class="col-xs-5 no-padding">
                            {{#endTime}}
                            <div class="timepicker-container end">
                                <div class="timepicker">
                                    <label for="timeSelectorEnd-0" class="pe-textLabelInput__label ">
                                        <div><span>End time</span>
                                            &nbsp;(
                                            <span>hh:mm AM/PM</span>)
                                        </div>
                                    </label>
                                    {{> ui-kit-input-icon }}
                                </div>
                                {{> ui-kit-menu }}
                            </div>
                            {{/endTime}}
                        </div>
                    </div>
                    <button id="remove-schedule-item-{{num}}" class="pe-link--btn remove-daytime" type="button" onclick="removeRow(event)"><span>Remove</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{#addRow}}
    <div class="add-row">
        <span class="add-day">
			{{>ui-kit-single-icon}}
		</span>
        <button id="add-schedule-item" class="pe-link--btn" type="button" onclick="cloneRow()">
            <span>Add another day and time</span>
        </button>
    </div>
    {{/addRow}}
</div>
{{/courseDates}}
<script src="../../js/advanced_forms.js" type="text/javascript"></script>
